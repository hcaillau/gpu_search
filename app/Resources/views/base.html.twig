        {% block body %}{% endblock %}
        <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('vendor/bootstrap-typeahead/bootstrap3-typeahead.js') }}"></script>
        <script src="{{ asset('vendor/openlayers/ol-debug.js') }}" type="text/javascript"></script>
        <script src="{{ asset('gpu-search.js') }}" type="text/javascript"></script>
        {% block javascripts %}{% endblock %}
    </body>
